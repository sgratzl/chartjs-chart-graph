{
  "name": "chartjs-chart-graph",
  "description": "Chart.js module for charting error bars",
  "version": "3.0.0-alpha.20",
  "author": {
    "name": "Samuel Gratzl",
    "email": "sam@sgratzl.com",
    "url": "https://wwww.sgratzl.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/sgratzl/chartjs-chart-graph",
  "bugs": {
    "url": "https://github.com/sgratzl/chartjs-chart-graph/issues"
  },
  "keywords": [
    "chart.js",
    "graph",
    "force-directed",
    "tree"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sgratzl/chartjs-chart-graph.git"
  },
  "module": "dist/chartgraphs.esm.js",
  "main": "dist/chartgraphs.js",
  "unpkg": "dist/chartgraphs.min.js",
  "jsdelivr": "dist/chartgraphs.umd.production.min.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "browserslist": [
    "Firefox ESR",
    "last 2 Chrome versions",
    "last 2 Firefox versions"
  ],
  "peerDependencies": {
    "@sgratzl/chartjs-esm-facade": "^3.0.0-alpha.21",
    "chart.js": "^3.0.0-alpha.2"
  },
  "dependencies": {
    "d3-force": "^2.0.1",
    "d3-hierarchy": "^1.1.9"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@sgratzl/chartjs-esm-facade": "^3.0.0-alpha.20",
    "@types/jest": "^26.0.10",
    "@types/jest-image-snapshot": "^3.1.0",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "@yarnpkg/pnpify": "^2.1.0",
    "canvas": "^2.6.1",
    "chart.js": "^3.0.0-alpha.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-image-snapshot": "^4.1.0",
    "prettier": "^2.0.5",
    "release-it": "^13.6.7",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.3",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-dts": "^1.4.10",
    "rollup-plugin-pnp-resolve": "^2.0.0",
    "tsdx": "~0.13.2",
    "tslib": "^2.0.1",
    "typedoc": "^0.18.0",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "clean": "rimraf dist node_modules \"*.tgz\"",
    "compile": "tsc -p tsconfig.json --noEmit",
    "start": "npm run watch",
    "watch": "tsdx watch --noClean --name ChartGraphs --format esm,umd",
    "build": "npm run clean && tsdx build --name ChartGraphs --format esm,umd && npm run typings",
    "typings": "rollup -c rollup.dts.config.js",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test --passWithNoTests --watch",
    "test:coverage": "tsdx test --passWithNoTests --coverage",
    "lint": "npm run eslint && npm run prettier",
    "fix": "npm run eslint:fix && npm run prettier:write",
    "prettier:impl": "prettier \"*.{md,json,js,yml}\" \"{.github,src,samples}/**\"",
    "prettier:write": "npm run prettier:impl -- --write",
    "prettier": "npm run prettier:impl -- --check",
    "eslint": "tsdx lint src --ext .ts,.tsx",
    "eslint:fix": "npm run eslint -- --fix",
    "docs": "typedoc",
    "prepare": "npm run build",
    "release": "release-it --disable-metrics --npm.skipChecks",
    "release:pre": "release-it --disable-metrics --npm.skipChecks --preRelease=alpha --npm.tag=next"
  }
}
